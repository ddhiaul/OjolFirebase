<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/item_tanggal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="@string/babelan_bekasi" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="9">

            <ImageView
                android:id="@+id/iv_dot1"
                android:layout_width="@dimen/_20dp"
                android:layout_height="@dimen/_20dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/_40dp"
                android:src="@drawable/dot" />

            <ImageView
                android:id="@+id/iv_dot2"
                android:layout_width="@dimen/_20dp"
                android:layout_height="@dimen/_20dp"
                android:layout_below="@+id/iv_dot1"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/_40dp"
                android:src="@drawable/placeholder" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_awal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60dp"
                android:layout_marginLeft="@dimen/_10dp"
                android:lines="2"
                android:text="@string/babelan_bekasi"/>
            <TextView
                android:id="@+id/tv_tujuan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_awal"
                android:layout_marginLeft="@dimen/_10dp"
                android:lines="2"
                android:text="@string/babelan_bekasi"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_01dp"
                android:layout_alignParentBottom="true"
                android:background="@android:color/darker_gray"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>